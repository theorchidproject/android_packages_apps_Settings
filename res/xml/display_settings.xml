<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:key="display_settings_screen"
    android:title="@string/display_settings"
    settings:keywords="@string/keywords_display">

   <com.android.settingslib.widget.LayoutPreference
        android:key="display_animation"
        android:layout="@layout/display_animation" 
        android:selectable="true"
        android:fragment="com.epic.fragments.AnimationSettings" />

    <PreferenceCategory
        android:title="@string/category_name_brightness">

        <com.android.settingslib.RestrictedPreference
            android:key="brightness"
            android:icon="@drawable/rr_brightness_icon"
            android:title="@string/brightness"
            android:layout="@layout/dot_preference_top_card"
            settings:keywords="@string/keywords_display_brightness_level"
            settings:useAdminDisabledSummary="true"
            settings:userRestriction="no_config_brightness"/>

        <com.android.settings.display.AutoBrightnessPreference
            android:key="auto_brightness_entry"
			android:icon="@drawable/ic_settings_adaptive_brightness"
			android:title="@string/auto_brightness_title"
         android:layout="@layout/dot_preference_middle_card"
            android:fragment="com.android.settings.display.AutoBrightnessSettings"
            settings:controller="com.android.settings.display.AutoBrightnessPreferenceController"/>
            
        <com.android.settings.widget.PrimarySwitchPreference
            android:key="reduce_bright_colors_preference"
            android:title="@string/reduce_bright_colors_preference_title"
            android:icon="@drawable/ic_reduce_bright_colors"
         android:layout="@layout/dot_preference_middle_card"
            settings:keywords="@string/keywords_reduce_bright_colors"
            android:persistent="false"
            android:fragment="com.android.settings.accessibility.ToggleReduceBrightColorsPreferenceFragment"
            settings:controller="com.android.settings.accessibility.ReduceBrightColorsPreferenceController"/>

        
        <com.android.settings.display.darkmode.DarkModePreference
            android:key="dark_ui_mode"
            android:icon="@drawable/ic_settings_dark"
            android:title="@string/dark_ui_mode"
        android:layout="@layout/dot_preference_middle_card"
            android:fragment="com.android.settings.display.darkmode.DarkModeSettingsFragment"
            android:widgetLayout="@null"
            settings:widgetLayout="@null"
            settings:controller="com.android.settings.display.DarkUIPreferenceController"
            settings:keywords="@string/keywords_dark_ui_mode"/>    

       
        <com.android.settings.widget.PrimarySwitchPreference
            android:key="night_display"
            android:icon="@drawable/ic_settings_night_mode"            
            android:title="@string/night_display_title"
         android:layout="@layout/dot_preference_bottom_card"           
            android:fragment="com.android.settings.display.NightDisplaySettings"
            settings:controller="com.android.settings.display.NightDisplayPreferenceController"
            settings:keywords="@string/keywords_display_night_display"/>     
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_name_lock_display">
<!--
        <Preference
            android:key="lockscreen_from_display_settings"
            android:title="@string/lockscreen_settings_title"
            android:fragment="com.android.settings.security.LockscreenDashboardFragment"
            settings:keywords="@string/keywords_ambient_display_screen"
			android:visibility="invisible"
            settings:controller="com.android.settings.security.screenlock.LockScreenPreferenceController"/>
-->
        <com.android.settingslib.RestrictedPreference
            android:key="screen_timeout"
            android:title="@string/screen_timeout"
            android:icon="@drawable/rr_screen_off_animations_icon"
            android:summary="@string/summary_placeholder"
         android:layout="@layout/dot_preference_top_card"           
            android:fragment="com.android.settings.display.ScreenTimeoutSettings"
            settings:controller="com.android.settings.display.ScreenTimeoutPreferenceController"/>
            
        <com.epic.support.preferences.SystemSettingSwitchPreference
            android:key="global_actions_onthego"
         android:layout="@layout/dot_preference_bottom_card"           
            android:icon="@drawable/rr_gaming_mode_enabled_icon"
            android:title="@string/global_actions_onthego_title"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_name_appearance">
        <Preference
            android:key="font_size"
            android:title="@string/title_font_size"
            android:icon="@drawable/rr_font_size_icon"
         android:layout="@layout/dot_preference_top_card"           
            android:fragment="com.android.settings.display.ToggleFontSizePreferenceFragment"
            settings:controller="com.android.settings.display.FontSizePreferenceController"
            settings:keywords="@string/keywords_font_size"/>

        <com.android.settings.display.ScreenZoomPreference
            android:key="display_settings_screen_zoom"
             android:icon="@drawable/rr_display_icon"
            android:title="@string/screen_zoom_title"
         android:layout="@layout/dot_preference_middle_card"           
            android:fragment="com.android.settings.display.ScreenZoomSettings"
            settings:keywords="@string/keywords_display_size"/>

     
        <!-- Icon pack -->
        <Preference
            android:key="android.theme.customization.icon_pack"
            android:icon="@drawable/rr_style_icon"
        android:layout="@layout/dot_preference_middle_card"
            android:title="@string/theme_customization_icon_pack_title"
            android:summary="@string/theme_customization_icon_pack_summary"
            android:fragment="com.android.settings.lineage.fragments.StatusbarIcons"/>

        <!-- Adaptive icon pack -->
        <Preference
            android:key="android.theme.customization.adaptive_icon_shape"
            android:icon="@drawable/rr_twist_icon"
        android:layout="@layout/dot_preference_bottom_card"
            android:title="@string/theme_customization_icon_shape_title"
            android:summary="@string/theme_customization_icon_shape_summary"
            android:fragment="com.android.settings.lineage.fragments.IconShapes"/>

        <Preference
            android:key="monet_engine"
            android:icon="@drawable/ic_monet_engine_title"            
            android:title="@string/monet_engine_title"
            android:summary="@string/monet_engine_summary"
            android:fragment="com.android.settings.display.MonetEngine"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_name_color">

        <com.android.settings.widget.PrimarySwitchPreference
            android:key="night_display"
            android:icon="@drawable/ic_settings_night_mode"            
            android:title="@string/night_display_title"
            android:fragment="com.android.settings.display.NightDisplaySettings"
            settings:controller="com.android.settings.display.NightDisplayPreferenceController"
            settings:keywords="@string/keywords_display_night_display"/>

        <Preference
            android:key="color_mode"
            android:title="@string/color_mode_title"
            android:icon="@drawable/ic_settings_colormode"
            android:fragment="com.android.settings.display.ColorModePreferenceFragment"
            settings:keywords="@string/keywords_color_mode"/>
    </PreferenceCategory>

    <com.android.settings.display.DensityPreference
        android:key="density"
        android:layout="@layout/dot_preference_middle_card"
        android:title="@string/developer_smallest_width" />

    <Preference
        android:key="font_size"
        android:layout="@layout/dot_preference_bottom_card"
        android:title="@string/title_font_size"
        android:fragment="com.android.settings.display.ToggleFontSizePreferenceFragment"
        settings:controller="com.android.settings.display.FontSizePreferenceController" />

    <PreferenceCategory
        android:title="@string/category_name_display_controls">

        <SwitchPreference
            android:key="auto_rotate"
			android:icon="@drawable/rr_auto_rotate_icon"
            android:title="@string/accelerometer_title"
        android:layout="@layout/dot_preference_top_card"
            settings:keywords="@string/keywords_auto_rotate"
            settings:controller="com.android.settings.display.AutoRotatePreferenceController"/>

        <SwitchPreference
            android:key="display_white_balance"
            android:icon="@drawable/ic_refresh"            
            android:title="@string/display_white_balance_title"
          android:layout="@layout/dot_preference_middle_card"          
            android:summary="@string/display_white_balance_summary"
            settings:controller="com.android.settings.display.DisplayWhiteBalancePreferenceController"/>

        <ListPreference
    	    android:key="min_refresh_rate"
            android:title="@string/min_refresh_rate_title"
             android:icon="@drawable/ic_refresh"                       
            android:summary="@string/summary_placeholder"
            settings:controller="com.android.settings.display.MinRefreshRatePreferenceController" />

    <ListPreference
            android:key="peak_refresh_rate"
             android:icon="@drawable/ic_refresh"                       
            android:title="@string/max_refresh_rate_title"
            android:summary="@string/summary_placeholder"
            settings:controller="com.android.settings.display.PeakRefreshRatePreferenceController"/>

        <SwitchPreference
            android:key="show_operator_name"
            android:title="@string/show_operator_name_title"
            android:summary="@string/show_operator_name_summary"/>

        <Preference
            android:key="screensaver"
            android:title="@string/screensaver_settings_title"
            android:fragment="com.android.settings.dream.DreamSettings"/>
-->

        <SwitchPreference
            android:key="camera_gesture"
            android:title="@string/camera_gesture_title"
            android:icon="@drawable/rr_camera_icon"
            android:summary="@string/camera_gesture_desc"/>

        <SwitchPreference
            android:key="lift_to_wake"            
            android:icon="@drawable/rr_wake_icon"
            android:title="@string/lift_to_wake_title"/>

        <SwitchPreference
            android:key="tap_to_wake"
            android:icon="@drawable/ic_tap_assistance"
            android:title="@string/tap_to_wake"
                    android:layout="@layout/dot_preference_middle_card"
            android:summary="@string/tap_to_wake_summary"/>

        <ListPreference
            android:key="theme"
            android:title="@string/device_theme"
            android:summary="@string/summary_placeholder"/>

        <com.epic.ui.EpicPreference
            android:key="vr_display_pref"
            android:title="@string/display_vr_pref_title"
            android:fragment="com.android.settings.display.VrDisplayPreferencePicker"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/customization_category_title">

	<Preference
            android:key="systemui_tuner_statusbar"
            android:title="@string/statusbar_items_title" >
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.StatusbarItemsActivity" />
        </Preference>
    </PreferenceCategory>
   <com.android.settingslib.widget.LayoutPreference        
        android:key="sakura_settings"
        android:layout="@layout/toplevel_bottom_animation"
        android:selectable="true"
        android:order="54"
        android:fragment="com.epic.fragments.NavbarSettings"/>
</PreferenceScreen>
